{{#partial "content"}}

   <h1>Post list!</h1>

   {{#if posts}}
       {{#each posts }} <!--loop-->
        <p>Current post:</p>
        <p>{{ content }} <a href="/posts/{{id}}">read more...</a></p>
               {{/each}}
   {{else}} <!--no posts!-->
    <p>No posts!</p>
   {{/if}}

{{/partial}}

{{> layout.hbs}}